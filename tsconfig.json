{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".plasmo/index.d.ts",
    "./**/*.ts",
    "./**/*.tsx",
    "postcss.config.js",
    "tailwind.config.js"
  ],
  "compilerOptions": {
    "paths": {
      "~*": [
        "./src/*"
      ],
      "~components*": [
        "./src/components/*"
      ],
      "~lib/utils*": [
        "./src/lib/utils/*"
      ],
    },
    "baseUrl": "."
  }
}
